<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme_ScreenOff" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="layoutBackgroundColor">@color/layoutBgColor</item>
        <item name="dialogBackgroundColor">@color/dialogBgColor</item>

    </style>




    <style name="Theme.FakeLock.Overlay" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Semi-transparent dark background -->
        <item name="android:windowBackground">#80000000</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <!-- Allows seeing through to the activity behind -->
        <item name="android:windowShowWallpaper">true</item>
    </style>


    <style name="FullWidthDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="Theme.MyApp.MaterialFullScreenDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>













</resources>

