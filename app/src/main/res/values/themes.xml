<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme_ScreenOff" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="layoutBackgroundColor">@color/layoutBgColor</item>
        <item name="dialogBackgroundColor">@color/dialogBgColor</item>

    </style>



    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Optional: You can still set your background color -->
        <item name="windowSplashScreenBackground">@color/splash_bg</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_screen</item>
    </style>


    <style name="FullWidthDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>







</resources>