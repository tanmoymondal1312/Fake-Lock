<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#4C5AFA"
                android:endColor="#892DD3"
                android:angle="45"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>

    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/BlackAndWhite"/>
            <corners android:radius="18dp"/>
        </shape>
    </item>

</layer-list>